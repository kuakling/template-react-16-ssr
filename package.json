{
  "name": "react-ssr-template",
  "version": "1.0.0",
  "description": "Server side rendering template for React 16",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development babel-node src/index",
    "server": "node public/index",
    "watch": "cross-env NODE_ENV=development babel-watch src/index",
    "build": "run-p build:client build:server build:node",
    "build:client": "cross-env NODE_ENV=production node -r babel-register node_modules/.bin/webpack -p --config webpack/client.production.js --colors",
    "build:server": "cross-env NODE_ENV=production node -r babel-register node_modules/.bin/webpack -p --config webpack/server.production.js --colors",
    "build:node": "cross-env NODE_ENV=production node -r babel-register node_modules/.bin/webpack -p --config webpack/node.production.js --colors",
    "clean": "rm -rf ./public/assets/ ./public/index.js",
    "server:prod": "yarn clean && yarn build && yarn server"
  },
  "keywords": [
    "ssr",
    "react",
    "fiber",
    "server side rendering",
    "express",
    "ejs"
  ],
  "author": {
    "name": "surakit Choodet",
    "email": "kuakling@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.1.1",
    "babel-polyfill": "^6.26.0",
    "dotenv": "^5.0.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-universal-component": "^2.8.4",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "webpack-flush-chunks": "^1.2.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.5.0",
    "cross-env": "^5.1.3",
    "css-hot-loader": "^1.3.8",
    "css-loader": "^0.28.10",
    "extract-css-chunks-webpack-plugin": "^2.0.18",
    "html-minifier": "^3.5.10",
    "npm-run-all": "^4.1.2",
    "redux-devtools-extension": "^2.13.2",
    "stats-webpack-plugin": "^0.6.2",
    "style-loader": "^0.20.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^3.11.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-hot-server-middleware": "^0.4.0",
    "webpack-merge": "^4.1.2"
  }
}
